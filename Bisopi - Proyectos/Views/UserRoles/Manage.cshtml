@using Bisopi___Proyectos.ViewModels
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card col-12">
        <div class="card-header">
            <h2>Administrar roles de usuario</h2>
            Añadir/Remover roles para el usuario: @ViewBag.UserName
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-success"
                   style="width:auto" />
            <a asp-action="Index"
               class="btn btn-darkgray" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>