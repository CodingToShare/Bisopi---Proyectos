<style>
    table, th, td {
        padding: 0px;
        border-collapse: collapse;
    }

    th {
        min-width: 50px;
        /* background-color: red; */
    }

    td {
        min-width: 50px;
    }

    .main-table {
        border: 1px solid black;
        margin-left: 178px;
    }

    .name-space {
        width: 200px;
