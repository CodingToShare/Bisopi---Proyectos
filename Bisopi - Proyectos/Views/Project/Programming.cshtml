                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="dx-field">
                                        <div class="dx-field-item-label-location-top">@Html.LabelFor(x => x.Programming.ResourcePositionID)</div>
                                        <div class="dx-field-item-content-location-bottom">
                                            @(Html.DevExtreme().SelectBoxFor(x => x.Programming.ResourcePositionID)
                                                .DisplayExpr("Name")
                                                .ValueExpr("RolesDataID")
                                                .DataSource(d => d.Mvc().Controller("APIUsers").LoadAction("GetRoles").Key("ResourceID"))
                                                .SearchMode(DropDownSearchMode.Contains)
                                                .SearchEnabled(true)
                                                .MinSearchLength(3)
                                                .ShowDataBeforeSearch(true)
                                                .ShowDropDownButton(true)
                                                .DeferRendering(false)
                                                .Placeholder("Seleccione una cargo...")
                                                )
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="dx-field">
                                        <div class="dx-field-item-label-location-top">@Html.LabelFor(x => x.Programming.ActivityTypeID)</div>
                                        <div class="dx-field-item-content-location-bottom">
                                            @(Html.DevExtreme().SelectBoxFor(x => x.Programming.ActivityTypeID)
                                                .DisplayExpr("ActivityTypeName")
                                                .ValueExpr("ActivityTypeID")
                                                .DataSource(d => d.Mvc().Controller("APIActivityTypes").LoadAction("GetSelectBox").Key("ActivityTypeID"))
                                                .SearchMode(DropDownSearchMode.Contains)
                                                .SearchEnabled(true)
                                                .MinSearchLength(3)
                                                .ShowDataBeforeSearch(true)
                                                .ShowDropDownButton(true)
                                                .DeferRendering(false)
                                                .Placeholder("Seleccione una tipo de actividad...")
                                                )
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="dx-field">
                                        <div class="dx-field-item-label-location-top">@Html.LabelFor(x => x.Programming.StartDate)</div>
                                        <div class="dx-field-item-content-location-bottom">
                                            @(Html.DevExtreme().DateBoxFor(x => x.Programming.StartDate)
                                                .InputAttr("aria-label", "Date")
                                                .Type(DateBoxType.Date)
                                                .Value(DateTime.Now)
                                                .Placeholder("Seleccione la fecha de inicio ...")
                                                )
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="dx-field">
                                        <div class="dx-field-item-label-location-top">@Html.LabelFor(x => x.Programming.EndDate)</div>
                                        <div class="dx-field-item-content-location-bottom">
                                            @(Html.DevExtreme().DateBoxFor(x => x.Programming.EndDate)
                                                .InputAttr("aria-label", "Date")
                                                .Type(DateBoxType.Date)
                                                .Value(DateTime.Now)
                                                .Placeholder("Seleccione la fecha de fin ...")
                                                )
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="dx-field">
                                        <div class="dx-field-item-label-location-top">@Html.LabelFor(x => x.Programming.AllocationPercentage)</div>
                                        <div class="dx-field-item-content-location-bottom">
                                            @(Html.DevExtreme().NumberBoxFor(x => x.Programming.AllocationPercentage)
                                                .Placeholder("Escriba el porcentaje")
                                                .Format("## %")
                                                .InputAttr("aria-label", "Currency Format")
                                                )
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="dx-field">
                                        <div class="dx-field-item-label-location-top">@Html.LabelFor(x => x.Programming.Comments)</div>
                                        <div class="dx-field-item-content-location-bottom">
                                            @(Html.DevExtreme().TextAreaFor(x => x.Programming.Comments)
                                                .Placeholder("Escriba los comentarios")
                                                .AutoResizeEnabled(true)
                                                )
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" id="id_proyecto_tarea" name="id_proyecto_tarea" value="">
                        <input type="hidden" id="cod_proyecto" name="cod_proyecto" value="">
                        @(Html.DevExtreme().Button()
                            .ElementAttr("class", "validate")
                            .Text("Guardar")
                            .Type(ButtonType.Success)
                            .UseSubmitBehavior(true)
                            )
                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

