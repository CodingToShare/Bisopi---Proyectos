@using Bisopi___Proyectos.ViewModels
@model List<UserGroupsViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Administrar grupos</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Grupos</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Groups.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="UserGroups" asp-action="Manage" asp-route-userId="@user.UserId">Administrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>